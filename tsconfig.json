{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "./babel.config.js",
        "./.eslintrc.js",
        "./tailwind.config.js",
        "./postcss.config.js",
    ],
}
